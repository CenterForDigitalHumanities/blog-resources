{
   "@context":[
      "http://geojson.org/geojson-ld/geojson-context.jsonld",
      "http://iiif.io/api/presentation/3/context.json"
   ],
   "id":"http://www.example.org/example1/manifest",
   "type":"Manifest",
   "label":{
      "en":[
         "Geographic Annotation Example Manifest"
      ]
   },
   "summary":{
      "en":[
         "A Manifest containing the image of a handwritten letter between friends.  The letter is supplemented by a textual transcription resource.  All instances of the word 'Paris' in that transcription are geocoded to Paris, France."
      ]
   },
   "items":[
      {
         "id":"http://www.example.org/example1/canvas/1",
         "type":"Canvas",
         "label":{
            "en":[
               "Handwritten coorespondence between friends.  "
            ]
         },
         "width":3204,
         "height":4613,
         "items":[
            {
               "id":"http://www.example.org/example1/annopage/contentPage",
               "type":"AnnotationPage",
               "items":[
                  {
                     "id":"http://www.example.org/example1/anno/content",
                     "type":"Annotation",
                     "motivation":"painting",
                     "body":{
                        "id":"http://www.example.org/example1/letter/full/max/0/default.jpg",
                        "type":"Image",
                        "format":"image/jpeg",
                        "service":[
                           {
                              "id":"http://www.example.org/example1/letter/",
                              "type":"ImageService3",
                              "profile":"level2"
                           }
                        ],
                        "width":3204,
                        "height":4613
                     },
                     "target":"http://www.example.org/example1/canvas/1"
                  }
               ]
            }
         ],
         "annotations":[
            {
               "id":"http://www.example.org/example1/annopage/supplementingPage",
               "type":"AnnotationPage",
               "items":[
                  {
                     "id":"http://www.example.org/example1/anno/transcriptionText",
                     "type":"Annotation",
                     "motivation":"supplementing",
                     "label":{
                        "en":[
                           "The transcription of this handwritten French correspondence between friends."
                        ]
                     },
                     "body":{
                        "id":"http://www.example.org/example1/resources/transcription.txt",
                        "format":"text/plain",
                        "language":"en"
                     },
                     "target":"http://www.example.org/example1/canvas/1"
                  },
                  {
                     "id":"http://www.example.org/example1/anno/geoAnno",
                     "type":"Annotation",
                     "motivation":"geolocate",
                     "label":{
                        "en":[
                           "The word 'Paris' to note as Paris, France.  This will link the geographic point for Paris to the word Paris in the transcription."
                        ]
                     },
                     "body":{
                        "type":"Feature",
                        "properties":{

                        },
                        "geometry":{
                           "type":"Point",
                           "coordinates":[
                              48.86,
                              2.34
                           ]
                        }
                     },
                     "target":{
                        "source":"http://www.example.org/example1/resources/transcription.txt",
                        "selector":{
                           "type":"TextQuoteSelector",
                           "exact":"Paris"
                        }
                     }
                  }
               ]
            }
         ]
      }
   ]
}